#include <iostream>
using namespace std;

int main()
{
  float a, b;
  int k;
  cout<<"Program wykonuje 4 podstawowe dzialania (+,-,/,*)"<<endl;
  cout<<endl;
  cout<<"Podaj pierwsza liczbe: "<<endl;
  cin>>a;
  cout<<"Podaj druga liczbe"<<endl;
  cin>>b;
  cout<<"opcja 1- dodawanie"<<endl;
  cout<<"opcja 2- odejmowanie"<<endl;
  cout<<"opcja 3- dzielenie"<<endl;
  cout<<"opcja 4- mnozenie"<<endl;
  cout<<"Wybierz opcje od 1-4 jakie dzialanie chcesz wykonac"<<endl;
  cin>>k;
  cout<<endl;

    switch(k)
      {
        case 1:
          cout<<"Wynik to: "<<a+b<<endl;
            cout<<"Koniec";
        break;
        case 2:
        cout<<"Wynik to: "<<a-b<<endl;
            cout<<"Koniec";
        case 3:
        cout<<"Wynik to: "<<a/b<<endl;
            cout<<"Koniec";
        case 4:
        cout<<"Wynik to: "<<a*b<<endl;
            cout<<"Koniec";
        default:
            cout<<"Dokonaj wyboru pomiedzy 1-4"<<endl;
          cout<<"Koniec";
        break;
      }
return 0;
}
